<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Name="hoverImage"
             x:Class="kon.Controls.HoverImage">

    <UserControl.Styles>
        <Style Selector="Image">
            <Style.Resources>
                <Cursor x:Key="MyCursor">
                    Hand
                </Cursor>
            </Style.Resources>
            <Setter Property="Cursor" Value="{StaticResource MyCursor}" />
        </Style>
    </UserControl.Styles>
    <Image Name="ThisImage"
           Source="{Binding ElementName=hoverImage, Path=Source}"
           Width="{Binding ElementName=hoverImage, Path=Width}"
           Height="{Binding ElementName=hoverImage, Path=Height}"
           PointerEntered="OnPointerEntered"
           PointerExited="OnPointerExited" />
</UserControl>