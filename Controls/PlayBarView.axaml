<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="using:System"
             xmlns:vm="using:kon.ViewModels"
             xmlns:cs="using:kon.Controls"
             x:DataType="vm:PlayBarViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="70"
             x:Class="kon.Controls.PlayBarView">
    <Design.DataContext>
        <vm:PlayBarViewModel />
    </Design.DataContext>
    <Border
        BorderBrush="{StaticResource ColorGray}"
        BorderThickness="0 1 0 0">
        <DockPanel>
            <Grid DockPanel.Dock="Left"
                  RowDefinitions="Auto,Auto"
                  ColumnDefinitions="Auto,Auto">
                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                        Margin="12"
                        CornerRadius="10" ClipToBounds="True">
                    <Image
                        Width="48" Height="48"
                        Source="{Binding Music.Cover}" />
                </Border>
                <TextBlock Text="{Binding Music.Title}"
                           Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Music.Performers[0]}"
                           Grid.Row="1" Grid.Column="1" />
            </Grid>

            <StackPanel DockPanel.Dock="Right" Spacing="10" Orientation="Horizontal">
                <cs:HoverImage Source="/Assets/Icons/muted.png"
                               HoverSource="/Assets/Icons/muted_hover.png"
                               Width="32" />
                <Image Source="/Assets/Icons/scale.png"
                       Height="14"
                       Margin="2"
                       VerticalAlignment="Bottom" />
            </StackPanel>
            <StackPanel Margin="20 5 20 0" Orientation="Vertical">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="28">
                    <cs:HoverImage Source="/Assets/Icons/顺序播放.png"
                                   HoverSource="/Assets/Icons/prev_music_hover.png"
                                   Width="16" />
                    <cs:HoverImage Source="/Assets/Icons/prev_music.png"
                                   HoverSource="/Assets/Icons/prev_music_hover.png"
                                   Width="32" />
                    <cs:HoverImage Source="/Assets/Icons/btnPlayingState.png"
                                   HoverSource="/Assets/Icons/btnPlayingStateHover.png"
                                   Width="38" />
                    <cs:HoverImage Source="/Assets/Icons/next_music.png"
                                   HoverSource="/Assets/Icons/next_music_hover.png"
                                   Width="32" />
                    <cs:HoverImage Source="/Assets/Icons/lyric.png"
                                   Width="16" />
                </StackPanel>
                <DockPanel Margin="0 4 0 0">
                    <TextBlock DockPanel.Dock="Left"
                               FontSize="12"
                               Text="00:00" />
                    <TextBlock DockPanel.Dock="Right"
                               FontSize="12"
                               Text="{Binding Music.DurationFormatted}" />
                    <Slider Theme="{StaticResource ProgressSlider}"
                            VerticalAlignment="Center"
                            Margin="6 2 6 0"
                            Minimum="0"
                            Maximum="{Binding Music.Duration}"
                            />
                </DockPanel>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>